<!-- src/pages/index.astro ---> 
---
import { refGroups } from "../data/refGroups";
import type { WorkItem, BlogItem } from "../types/content";
import { refIcons } from "../data/refIcons";

import HeroSection from "../components/HeroSection.astro";
import AboutSection from "../components/AboutSection.astro";
import WorksSection from "../components/WorksSection.astro";

const featuredWorks: WorkItem[] = [];
const latestBlogs: BlogItem[] = [];

const WORKS_HREF = "/works";
const BLOGS_HREF = "/blogs";

---
<style is:global>
  /* === TOKENS ============================================== */
  :root {
    /* ノイズテクスチャ */
    --noise-texture: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");

    /* フォント設定 */
    --font-ja-serif: "Shippori Mincho", "Hiragino Mincho ProN", "Yu Mincho", serif;
    --font-en-serif: "Cinzel", "Cormorant Garamond", serif;
    --paper-body-size: clamp(1.02rem, 1.05vw, 1.12rem);

    --about-block-gap: 2.2rem;
    --about-heading-gap: 0.8rem;

    --hero-frame-outer: rgba(255, 242, 204, 0.45);
    --hero-frame-inner: rgba(255, 242, 204, 0.92);

    /* Reference用カラー */
    --c-text-beige: #fff2cc;
    --c-gold: #c5a059;
    --c-line-light: rgba(255, 242, 204, 0.3);
  }


  
  /* === BASE  =============================================== */
  /* フォント読み込み*/
  @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Shippori+Mincho:wght@400;500;700&display=swap');

  
  
  /* 言語フォント 日：明朝体、英：装飾セリフ */
  :lang(ja) {
    font-family: var(--font-ja-serif);
  }
  :lang(en) {
    font-family: var(--font-en-serif);
  }

  /* 基本設定*/
  html, body {
    height: 100%;
    margin: 0;
    font-family: 'Shippori Mincho', 'Yu Mincho', serif;    
    background-color: #8a0000;
  }

  body {
    overflow: hidden; /* bodyはスクロールさせない */
  }

  /* スクロール設定 */
  #viewport {
    height: 100dvh;
    overflow-y: auto;
    scroll-snap-type: y mandatory;
    scroll-behavior: smooth;
  }

  /* セクション設定 */
  .page {
    height: 100dvh; /* 1画面設定 */
    width: 100%;
    scroll-snap-align: start;
    scroll-snap-stop: always; 
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-sizing: border-box;
    overflow: auto;
    z-index: 0;
    isolation: isolate;
  }

  /* 全セクション共通：背景ノイズ */
  .page::before {
    content: "";
    position: absolute;
    inset: 0; /* top:0; right:0; bottom:0; left:0; の短縮 */
    background-image: var(--noise-texture);
    opacity: 0.1;              /* ここで濃さ調整 */
    mix-blend-mode: overlay;    /* 既存Heroと同系統 */
    pointer-events: none;
    z-index: -1;
  }

  /* ノイズより前面にコンテンツを出す（紙や本文が負けないように） */
  .page > :not(.hero-frame) {
    position: relative;
    z-index: 1;
  }

  
  
  /* === COMPONENTS ========================================== */
  /* =========================================
     Paper Layout (ベージュの紙デザイン)
     =========================================
  */
  .paper-layout {
    background-color: rgba(246, 235, 216, 0.92);
    backdrop-filter: blur(3px);
    -webkit-backdrop-filter: blur(3px);

    font-size: var(--paper-body-size);   
    color: #333333;
    position: relative;

    /* 面サイズに合わせて固定 */
    width: 90vw;
    height: 97vh;
    
    margin: auto;
    padding: 2vh 4vw;
    box-sizing: border-box;

    overflow: hidden;

    box-shadow:
      inset 25px 0 40px -10px rgba(0, 0, 0, 0.1), /* ノド（綴じ代）の影 */
      0 10px 20px rgba(0, 0, 0, 0.15);            /* 全体の影 */

    border: 1px solid rgba(0, 0, 0, 0.1);

    /* フレックスボックスで上下配置 */
    display: flex;
    flex-direction: column;
    min-height: 0;
  }

  .paper-layout::before {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;

    background-image:
      var(--noise-texture),
      repeating-linear-gradient(
	90deg,
        rgba(0,0,0,0.03) 0px,
        rgba(0,0,0,0.00) 2px,
        rgba(0,0,0,0.00) 8px
      );
    background-size: 180px 180px, auto;
    opacity: 0.07;
    mix-blend-mode: multiply;
  }
  
  .paper-layout > * {
    position: relative;
    z-index: 1;
  }

  .paper-layout p {
    font-size: 1em;        
    font-weight: 500;
    line-height: 2.15;
    letter-spacing: 0.02em;
    margin: 0.8rem 0;
  }

  .paper-layout .pillar-heading + p {
    margin-top: 0.55rem;
  }

  .paper-body {
    flex: 1;
    min-height: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1.6rem;
  }


  /* セクションヘッダー */
  .section-header {
    text-align: center;
    margin-bottom: 2vh;
    flex-shrink: 0;
  }

  .section-title {
    font-family: 'Cinzel', serif;
    font-size: 2.5rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: #8a0000;
    margin: 0;
    display: inline-block;
    padding-bottom: 0.3rem;
    border-bottom: 1px solid #8a0000;
  }

  .section-subtitle {
    display: block;
    font-size: 1.1rem;
    letter-spacing: 0.15em;
    color: #888;
    font-family: 'Cormorant Garamond', serif;
    font-style: italic;
  }

  .about-header::after {
    content: "";
    display: block;
    width: 100%;
    height: 1px;
    background: #888;
    margin: 0.6rem auto 0.6rem;
  }

  .about-header .section-title {
    width: 100%;
    border-bottom: none;
    padding-bottom: 0;
  }
  
  /* === SECTIONS ============================================ */
  

  /* ref */
  .ref-layout {
    max-width: 900px;
    width: 100%;
    padding: 0 2rem;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* モックの「2つの塊」を縦に、間隔大きめ */
  .ref-grid {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
    margin-top: 1.8rem;
    width: 100%;
    max-width: 500px;
  }

  .ref-group {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  .ref-group-title {
    font-family: var(--font-ja-serif);
    font-size: 1.2rem;
    letter-spacing: 0.25em;
    color: var(--c-gold);
    margin: 0;
    text-align: center;
   }  
  
  .ref-group-title::before,
  .ref-group-title::after {
    content: "—";
    opacity: 0.7;
  }
  .ref-group-title::before { margin-right: 0.6em; }
  .ref-group-title::after  { margin-left: 0.6em; }

  .ref-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  /* カード本体 */
  .ref-item {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    text-decoration: none;
    color: var(--c-text-beige);
    padding: 0;
    border-bottom: 3px solid var(--c-line-light);
    border-left: 3px solid var(--c-line-light);
    background: rgba(138, 0, 0, 0.6);
    overflow: hidden;
    transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1),
                border-color 0.3s ease;
  }
  .ref-item:hover {
    transform: scale(1.03);
    border-color: rgba(255, 242, 204, 0.8);
  }

  .ref-info {
    flex: 1;
    padding: 1.2rem 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .ref-name {
    font-family: 'Cinzel', serif;
    font-size: 1.3rem;
    letter-spacing: 0.1em;
    font-weight: 100;
  }
  .ref-desc {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.85rem;
    opacity: 0.7;
    margin-top: 0.4rem;
    font-style: italic;
  }

  .ref-icon-box {
    position: relative;
    flex: 0 0 auto;
    aspect-ratio: 1 / 1;
    width: clamp(110px, 10vw, 160px);
    border-right: 0px solid var(--c-line-light);
    background-color: rgba(0, 0, 0, 0.18);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: border-color 0.3s ease;
  }
  .ref-item:hover .ref-icon-box {
    border-color: rgba(255, 242, 204, 0.8);
   }

  .ref-icon-box :global(svg) {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40%;
    height: 40%;
    fill: var(--c-text-beige);
    opacity: 0.8;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  .ref-item:hover .ref-icon-box :global(svg) {
    opacity: 1;
  }

  
  /* === OVERRIDES =========================================== */
  /* =========================================
    Reference: section-header流用 + 色だけ差し替え
  ========================================= */
  .ref-section .section-title {
    color: var(--c-text-beige);
    border-bottom-color: var(--c-text-beige);
    display: block;
    width: min(520px, 30vw);
  }

  .ref-section .section-subtitle {
    color: var(--c-text-beige);
    opacity: 0.85;
    margin-top: 0.6rem;
  }

  /* 参照の本文（リンクなど）も同系色に寄せたい場合 */
  .ref-section { color: var(--c-text-beige); }
  .ref-section a,
  .ref-section p,
  .ref-section li {
    color: inherit;
  }

  /* 外部/相互の見出しは黄金（ここで上書きを確定させる） */
  .ref-section .ref-group-title {
    color: var(--c-gold);
  }
  .ref-section .section-header {
    margin-bottom: 1rem;
  }

 

  /* === TODO/LEGACY ========================================= */
  @keyframes arrow-breathe {
  0%, 100% { transform: rotate(45deg) translateY(0); opacity: 0.65; }
  50%      { transform: rotate(45deg) translateY(2px); opacity: 0.95; }
  }
  /* ========================================================= */


  

  .empty-state {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 0;
  }

  .empty-state p {
    text-align: center;
    line-height: 2;
  }

  .works-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 1.5rem;
  }

  .work-item {
    margin: 0;
  }

  .work-content {
    display: grid;
    gap: 0.6rem;
  }

  .meta-info {
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    color: #6f6254;
  }

  .work-title {
    margin: 0;
    font-size: 1.4rem;
  }

  .work-title a {
    color: inherit;
    text-decoration: none;
  }

  .work-title a:hover {
    text-decoration: underline;
  }

  .work-summary {
    margin: 0;
    line-height: 1.8;
  }

  .more-link-container {
    display: flex;
    justify-content: center;
    margin-top: 1.5rem;
  }

  .more-link {
    letter-spacing: 0.12em;
    color: #8a0000;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
    padding-bottom: 0.2rem;
  }

  .more-link:hover {
    opacity: 0.8;
  }

</style>

