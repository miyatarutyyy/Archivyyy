---
type WorkItem = {
  title: string;
  summary: string;
  href: string;
  status?: "WIP" | "Stable" | "Archived";
};

type BlogItem = {
  title: string;
  href: string;
  dateISO: string; //YYYY-MM-DD
  summary?: string;
};

const featuredWorks: WorkItem[] = [];
const latestBlogs: BlogItem[] = [];

const WORKS_HREF = "/works";
const BLOGS_HREF = "/blogs";

const refGroups = [
  {
    title: "【外部】",
    ariaLabel: "外部リンク",
    links: [
      { href: "https://x.com/MIYATAstudyyyne", label: "Twitter/X", rel: "me" },
      { href: "https://github.com/miyatarutyyy", label: "GitHub", rel: "me" },
    ],
  },
  {
    title: "【相互】",
    ariaLabel: "相互リンク",
    links: [
      { href: "https://friend-a.example", label: "FriendA" },
    ],
  },
];

---
<style>
  /* フォント読み込み*/
  @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Shippori+Mincho:wght@400;500;700&display=swap');

  
  :root {
    /* ノイズテクスチャ */
    --noise-texture: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");

    /* フォント設定 */
    --font-ja-serif: "Shippori Mincho", "Hiragino Mincho ProN", "Yu Mincho", serif;
    --font-en-serif: "Cinzel", "Cormorant Garamond", serif;
  }

  /* 言語フォント 日：明朝体、英：装飾セリフ */
  :lang(ja) {
    font-family: var(--font-ja-serif);
  }
  :lang(en) {
    font-family: var(--font-en-serif);
  }

  /* 基本設定*/
  html, body {
    height: 100%;
    margin: 0;
    font-family: 'Shippori Mincho', 'Yu Mincho', serif;    
    background-color: #8a0000;
  }

  body {
    overflow: hidden; /* bodyはスクロールさせない */
  }

  /* スクロール設定 */
  #viewport {
    height: 100vh;
    overflow-y: auto;
    scroll-snap-type: y mandatory;
    scroll-behavior: smooth;
  }

  /* セクション設定 */
  .page {
    height: 100vh; /* 1画面設定 */
    width: 100%;
    scroll-snap-align: start;
    scroll-snap-stop: always; 
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-sizing: border-box;
    overflow: hidden;
  }

  /* 全セクション共通：背景ノイズ */
  .page::before {
    content: "";
    position: absolute;
    inset: 0; /* top:0; right:0; bottom:0; left:0; の短縮 */
    background-image: var(--noise-texture);
    opacity: 0.2;              /* ここで濃さ調整 */
    mix-blend-mode: overlay;    /* 既存Heroと同系統 */
    pointer-events: none;
    z-index: 0;
  }

  /* ノイズより前面にコンテンツを出す（紙や本文が負けないように） */
  .page > * {
    position: relative;
    z-index: 1;
  }

  /* =========================================
    Hero Section: 静謐な表紙
    =========================================  */
  .hero-section {
    background-color: #8a0000;
    position: relative;
  }

  .hero-section::after {
    content: "";
    position: absolute;
    inset: 3vw;
    border: 1px solid #fff2cc;
    pointer-events: none;
    z-index: 2;
  }

  .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
    gap: 3rem;
    max-width: 640px;
    padding: 0 4rem;
    position: relative;
    z-index: 3;
    height: 100%;
  }

  .hero-title {
    font-family: 'Shippori Mincho', serif;
    font-size: 3.2rem; 
    color: #fff2cc;
    font-weight: 700;
    margin: 0;
    text-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .hero-title.is-vertical {
    writing-mode: vertical-rl;
    text-orientation: mixed;
    
    display: inline-flex;
    gap: 0.6em;
    line-height: 1.7;
    letter-spacing: 0.6em;
    white-space: nowrap;
  }
  .hero-description {
    font-family: 'Shippori Mincho', serif;
    font-size: 1.1rem;
    font-weight: 400;
    line-height: 2.4;
    color: #fff2cc;
    letter-spacing: 0.1em;
    margin: 0;
  }

  /* =========================================
     Paper Layout (ベージュの紙デザイン)
     =========================================
  */
  .paper-layout {
    background-color: rgba(246, 235, 216, 0.92);
    backdrop-filter: blur(3px);
    -webkit-backdrop-filter: blur(3px);
    
    color: #2b2b2b;
    position: relative;

    /* 面サイズに合わせて固定 */
    width: 90vw;
    height: 97vh;
    
    margin: auto;
    padding: 2vh 4vw;
    
    box-sizing: border-box;
    overflow-y: auto;

    box-shadow:
      0 1px 2px rgba(0,0,0,0.05),
      0 8px 32px rgba(0,0,0,0.3);

    border: 1px solid rgba(0, 0, 0, 0.1);

    /* フレックスボックスで上下配置 */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .paper-layout::before {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;

    background-image:
      var(--noise-texture),
      repeating-linear-gradient(
	90deg,
        rgba(0,0,0,0.03) 0px,
        rgba(0,0,0,0.00) 2px,
        rgba(0,0,0,0.00) 8px
      );
    background-size: 180px 180px, auto;
    opacity: 0.07;
    mix-blend-mode: multiply;
  }
  
  .paper-layout > * {
    position: relative;
    z-index: 1;
  }
  

  /* セクションヘッダー */
  .section-header {
    text-align: center;
    margin-bottom: 2vh;
    flex-shrink: 0;
  }

  .section-title {
    font-family: 'Cinzel', serif;
    font-size: 2.5rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    color: #8a0000;
    margin: 0;
    display: inline-block;
    padding-bottom: 0.3rem;
    border-bottom: 1px solid #8a0000;
  }

  .section-subtitle {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.85rem;
    letter-spacing: 0.15em;
    color: #888;
    font-family: 'Cormorant Garamond', serif;
    font-style: italic;
  }

  /* =========================================
     Reference: section-header流用 + 色だけ差し替え
     ========================================= */
  .ref-section .section-title {
    color: #fff2cc;
    border-bottom-color: #fff2cc;
  }

  .ref-section .section-subtitle {
    color: #fff2cc;
    opacity: 0.85;
  }

  /* 参照の本文（リンクなど）も同系色に寄せたい場合 */
  .ref-section,
  .ref-section a,
  .ref-section h3,
  .ref-section p,
  .ref-section li {
    color: #fff2cc;
  }

  .ref-section a {
    text-decoration-color: #fff2cc;
  }

  .ref-layout {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: min(820px, 86vw);
    margin-left:auto;
    margin-right: auto;
    align-items: center;
  }

  .ref-groups {
    display: grid;
    grid-auto-flow: row;
    row-gap: clamp(28px, 4vw, 84px);
    align-items: start;
    justify-content: center;
  }

  .ref-links {
    list-style: none;
    padding: 0;
    margin: 0;
    writing-mode: vertical-rl;
    text-orientation: mixed;

    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 0.9rem;
  }
  .ref-links li::before {
    content: none;
  }

  .ref-links .ref-tag {
    letter-spacing: 0.12em;
    font-weight: 600;
    white-space: nowrap;
    opacity: 0.95;
  }

  .empty-state {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .empty-state p {
    text-align: center;
    line-height: 2;
  }

  .works-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 1.5rem;
  }

  .work-item {
    margin: 0;
  }

  .work-content {
    display: grid;
    gap: 0.6rem;
  }

  .meta-info {
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    color: #6f6254;
  }

  .work-title {
    margin: 0;
    font-size: 1.4rem;
  }

  .work-title a {
    color: inherit;
    text-decoration: none;
  }

  .work-title a:hover {
    text-decoration: underline;
  }

  .work-summary {
    margin: 0;
    line-height: 1.8;
  }

  .more-link-container {
    display: flex;
    justify-content: center;
    margin-top: 1.5rem;
  }

  .more-link {
    letter-spacing: 0.12em;
    color: #8a0000;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
    padding-bottom: 0.2rem;
  }

  .more-link:hover {
    opacity: 0.8;
  }


</style>

