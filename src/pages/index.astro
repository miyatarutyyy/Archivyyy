<html lang="ja">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <title>Archivyyy</title>
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
  </head>
  <body>
    <main id="viewport">
      <HeroSection
	titleLines={["情報系", "人文学徒に", "なりたくて"]}
	siteName="Archivyyy"
	tagline="みやたるてぃのウェブサイト"
      />
      <!-- About --->
      <AboutSection />
      <!-- Works -->
      <WorksSection
	featuredWorks={featuredWorks}
	worksHref={WORKS_HREF}
      />
      <!-- Blogs -->
      <section class="page" aria-labelledby="blogs-title">
        <div class="paper-layout">
          <header class="section-header about-header">
            <h2 id="blogs-title" class="section-title">
	      <span lang="ja">稿録</span>
	    </h2>
            <span class="section-subtitle">Notes & Essays</span>
          </header>

          {latestBlogs.length === 0 ? (
            <div class="empty-state">
              <p>記事はまだありません</p>
            </div>
          ) : (
            <ul class="works-list">
              {latestBlogs.slice(0, 3).map((b) => (
                <li class="work-item">
                  <article class="work-content">
                    <span class="meta-info">
                      <time datetime={b.dateISO}>{b.dateISO}</time>
                    </span>
                    <h3 class="work-title"><a href={b.href}>{b.title}</a></h3>
                    {b.summary ? <p class="work-summary">{b.summary}</p> : null}
                  </article>
                </li>
              ))}
            </ul>
          )}

          <div class="more-link-container">
            <a href={BLOGS_HREF} class="more-link">
	      <span lang="ja">全ての記事を見る</span>
	    </a>
          </div>
        </div>
      </section>

      <!-- Reference --->
      <section class="page ref-section" aria-labelledby="ref-title">
        <div class="ref-layout">
          <header class="section-header">
            <h2 id="ref-title" class="section-title"><span lang="ja">参照</span></h2>
            <span class="section-subtitle">Reference</span>
          </header>
          <div class="ref-grid">
            {refGroups.map((group) => (
              <div class="ref-group" aria-label={group.ariaLabel} key={group.title}>
                <h3 class="ref-group-title">{group.title.replace(/[【】]/g, "")}</h3>
                <div class="ref-list">
                  {group.links.map((link) => (
                    <a
                      class="ref-item"
                      href={link.href}
                      rel={link.rel ?? undefined}
                      target={link.href.startsWith("http") ? "_blank" : undefined}
                      key={link.href}
                    >
                      <div class="ref-info">
                        <span class="ref-name">{link.label}</span>
                        {link.desc ? <span class="ref-desc">{link.desc}</span> : null}
                      </div>
                      <div class="ref-icon-box" set:html={refIcons[link.icon ?? "globe"]}></div>
                    </a>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
	</section>
    </main>
  </body>
</html>
