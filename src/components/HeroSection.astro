<!-- src/components/HeroSection.astro ---> 
---
type Props = {
  titleLines: string[];
  siteName: string;
  tagline: string;
}

const { titleLines, siteName, tagline } = Astro.props;
---

<style>
  /* ===== Hero Section ==================== */
  .hero-section {
    background-color: #8a0000;
    position: relative;
    
    height: 100dvh;
    scroll-snap-align: start;
    scroll-snap-stop: always;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-frame {
    position: absolute;
    inset: 3vw;
    box-sizing: border-box;
    border: 1px solid var(--hero-frame-outer);
    pointer-events: none;
    z-index: 2;
  }

  .hero-frame::before {
    content: "";
    position: absolute;
    inset: 10px;
    box-sizing: border-box;
    border: 1px solid var(--hero-frame-inner);
    display: block;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1) inset;
  }

  .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
    gap: 3rem;
    max-width: 640px;
    padding: 0 4rem;
    position: relative;
    z-index: 3;
    height: 100%;
  }

  .hero-title {
    font-family: 'Shippori Mincho', serif;
    font-size: 3.2rem; 
    color: #fff2cc;
    font-weight: 700;
    margin: 0;
    text-shadow: 3px 3px 9px rgba(0, 0, 0, 0.6);
  }

  .hero-title.is-vertical {
    writing-mode: vertical-rl;
    text-orientation: mixed;
    
    display: inline-flex;
    gap: 0.6em;
    line-height: 1.7;
    letter-spacing: 0.6em;
    white-space: nowrap;
  }

  .hero-description {
    font-family: 'Shippori Mincho', serif;
    font-size: 1.1rem;
    font-weight: 400;
    line-height: 1.3;
    color: #fff2cc;
    letter-spacing: 0.1em;
    margin: 0;
    text-align: center;
  }

  .hero-description .hero-divider {
    display: block;
    width: min(240px, 60vw);
    height: 1px;
    margin: 0.7rem auto;
    background: linear-gradient(
      90deg,
      rgba(255, 242, 204, 0.2) 0%,
      rgba(255, 242, 204, 0.85) 50%,
      rgba(255, 242, 204, 0.2) 100%
    );
    border-radius: 999px;
  }

  /* ===== Scroll Animation ==================== */
  .bookmark-scroll {
    margin-top: 1.1rem;
    display: grid;
    grid-auto-flow: column;
    align-items: center;
    justify-content: center;
    column-gap: 0.75rem;
    pointer-events: none;
    opacity: 0.95;
  }

  .bookmark-scroll__stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.35rem;
  }

  .bookmark-scroll__line {
    width: 2px;
    height: 60px;
    border-radius: 999px;
    position: relative;
    overflow: hidden;
    background: rgba(255, 242, 204, 0.22);
  }

  .bookmark-scroll__line::after {
    content: "";
    position: absolute;
    left: 50%;
    top: -18px;
    width: 6px;
    height: 6px;
    border-radius: 999px;
    background: rgba(255, 242, 204, 0.95);
    box-shadow: 0 0 0 4px rgba(255, 242, 204, 0.18),
		0 6px 10px rgba(0, 0, 0, 0.25);
    transform: translateX(-50%);
    opacity: 0;
    animation: scroll-drop 1.75s ease-in-out infinite;
  }

  @keyframes scroll-drop {
    0%   { transform: translate(-50%, -18px); opacity: 0; }
    15%  { opacity: 1; }
    70%  { transform: translate(-50%, 76px); opacity: 1; }
    100% { transform: translate(-50%, 76px); opacity: 0; }
  }

  @media (prefers-reduced-motion: reduce) {
    #viewport { scroll-behavior: auto; }

    .bookmark-scroll__line::after {
      animation: none;
      opacity: 0.8;
    }
  }
</style>

<section class="page hero-section" aria-labelledby="hero-title">
  <div class="hero-frame" aria-hidden="true"></div>

  <div class="hero-content-wrapper">
    <h1 id="hero-title" class="hero-title is-vertical">
      {titleLines.map((line, i) => (
	<>
	  {line}{i < titleLines.length - 1 ? <br/> : null}
	</>
      ))}
    </h1>

    <div class="hero-description">
      <p>{siteName}</p>
      <span class="hero-divider" aria-hidden="true"></span>
      <p>{tagline}</p>

      <div class="bookmark-scroll" aria-hidden="true">
	<span class="bookmark-scroll__stack" aria-hidden="true">
	  <span class="bookmark-scroll__line"></span>
	</span>
      </div>
    </div>
  </div>
</section>
